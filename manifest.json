{
  "manifest_version": 3,
  "name": "BetNet",
  "version": "1.0.0",
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-16.png"
  },
  "icons": {
    "16": "icons/icon-16.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}